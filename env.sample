# =============================================================================
# RETAIL INSIGHTS API - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your environment
# 
# SECURITY WARNING: Never commit the actual .env file to version control!
# This file contains sensitive information like database credentials and API keys.
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
# PostgreSQL database connection settings
# These are REQUIRED - the application will not start without them

# Database user credentials
DB_USER=retail_user
DB_PASSWORD=your_secure_password_here

# Database connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=retail_insights_db

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment and debugging settings

# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (true/false)
# WARNING: Only enable in development environments
APP_DEBUG=false

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
# Server host and port settings

# API server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# =============================================================================
# SECURITY CONFIGURATION (REQUIRED)
# =============================================================================
# JWT and authentication settings
# These are REQUIRED for authentication to work properly

# JWT secret key for token signing (REQUIRED)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production

# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Access token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Cross-Origin Resource Sharing settings
# These are configured in the code but can be customized if needed

# Allowed origins for CORS (comma-separated list)
# Default: http://localhost:3000, http://localhost:8080
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Logging level and configuration

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Settings for development and testing

# Enable auto-reload in development (true/false)
# AUTO_RELOAD=true

# Enable SQL query logging (true/false)
# SQL_ECHO=false

# =============================================================================
# PRODUCTION CONSIDERATIONS
# =============================================================================
# For production deployments, consider these additional settings:

# Database connection pool settings
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20
# DB_POOL_TIMEOUT=30
# DB_POOL_RECYCLE=3600

# SSL/TLS settings for production
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Rate limiting settings
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Settings for monitoring and health checks

# Health check endpoint path
# HEALTH_CHECK_PATH=/health

# Metrics endpoint path
# METRICS_PATH=/metrics

# =============================================================================
# EXAMPLE VALUES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development Environment Example:
# DB_USER=dev_user
# DB_PASSWORD=dev_password
# DB_HOST=localhost
# DB_NAME=retail_dev
# APP_ENV=development
# APP_DEBUG=true
# JWT_SECRET_KEY=dev_secret_key_not_secure

# Production Environment Example:
# DB_USER=prod_user
# DB_PASSWORD=very_secure_production_password
# DB_HOST=prod-db.example.com
# DB_NAME=retail_production
# APP_ENV=production
# APP_DEBUG=false
# JWT_SECRET_KEY=very_secure_production_jwt_secret_key

# =============================================================================
# QUICK START INSTRUCTIONS
# =============================================================================
# 1. Copy this file: cp env.sample .env
# 2. Update database credentials (DB_USER, DB_PASSWORD, DB_NAME)
# 3. Generate secure JWT secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 4. Update JWT_SECRET_KEY with the generated value
# 5. Start the application: uvicorn app.main:app --reload
